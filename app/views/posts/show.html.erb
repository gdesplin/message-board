<div class="container">
  <div class="blog-post blog-post panel panel-primary mt-3">
    <h2 class="blog-header panel-heading"><%= @post.title %></h2>
    <div class="panel-body">
      <p class="blog-post-meta"><small><%= @post.created_at.strftime("%_m/%d/%Y") %> by <%= @post.user.name %></small></p>
      <p><%= @post.body %></p>
      <%= link_to "Back to posts", :posts %>
    </div>
  </div>
  <div>
    <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#newCommentModal">
      Reply
    </button>
    <h2>Comments</h2>
    <% if @post.comments.blank? %>
      <div class="alert alert-info">
        There are no <%= Comment.model_name.human.downcase.pluralize %> to display.
      </div>
    </div> 
    <% end %>
    <% @post.comments.order(created_at: :desc).each do |comment| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= comment.user.name %>
            <small><%= comment.created_at.strftime("%_m/%d/%Y %l:%M %p") %></small>
          </h3>
          
        </div>
        <div class="panel-body">
            <%= comment.body %>
        </div>
      </div>
      <% end %>
  </div>

  <div class="modal fade" id="newCommentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Add <%= Comment.model_name.human.downcase %></h4>
        </div>
        <%= form_with model: @post.comments.new do |f| %>
          <div class="modal-body">
          <div class="form-group">
              <%= f.label :body %><br />
              <%= f.text_area :body, class: "form-control" %>
            </div>
            <%= f.hidden_field :post_id, value: @post.id %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit "Add Comment", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
