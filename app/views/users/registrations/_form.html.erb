<%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: "name" %>
</div>

<div class="form-group">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
</div>
<% if f.object.persisted? %>
  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
  </div>
<% end %>

<div class="actions">
  <%= f.submit "Save", class: "btn btn-lg btn-primary btn-block" %>
</div>